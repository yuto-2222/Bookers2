<!--User info-->

<!--New book-->
<div class="container">
	<div class="row mt-3">

		<div class="col-4">
			<%= render 'books/book', book: @book, user: @user %>
		</div>

		<div class="col-8">
			<h2>Books</h2>
			<table class="table">
				<thead>
					<th scope="col"></th>
					<th scope="col">Title</th>
					<th scope="col">Opinion</th>
				</thead>

				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td class="border-top border-light">
							<%= link_to user_path(@user.id) do %>
								<%= image_tag @user.get_profile_image(100,100) %><br>
							<% end %>
						</td>
						<td class="border-top border-light">
							<%= link_to book_path(book.id) do %>
								<%= book.title %>
							<% end %>
						</td>
						<td class="border-top border-light"><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>

	</div>
</div>