<h2>New book</h2>

<%= form_with model: @book do |f| %>

	Title<br>
	<%= f.text_field :title %>
	<br>
	Body<br>
	<%= f.text_area :body %>
	<br>
	<%= f.submit 'Create Book' %>

<% end %>

<h2>Books</h2>

<table>
	<thead>
		<th></th>
		<th>Title</th>
		<th>Opinion</th>
	</thead>

	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td></td>
			<td>
				<%= link_to book_path(book.id) do %>
					<%= book.title %>
				<% end %>
			</td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>