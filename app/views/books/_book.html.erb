<h2>User info</h2>
<%= image_tag user.get_profile_image(100,100) %>

<div>name</div>
<div><%= user.name %></div>
<div>introduction</div>
<div><%= user.introduction %></div>

<% if user == current_user %>
	<p><%= link_to "プロフィール編集", edit_user_path(user) %></p>
<% end %>

<h2>New book</h2>

<%= form_with model: book do |f| %>

	Title<br>
	<%= f.text_field :title %>
	<br>
	Body<br>
	<%= f.text_area :body %>
	<br>
	<%= f.submit 'Create Book' %>

<% end %>