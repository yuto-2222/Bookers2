<%= render 'books/book', book: @book, user: @user %>

<h2>Books</h2>
<table>
	<thead>
		<th></th>
		<th>Title</th>
		<th>Opinion</th>
	</thead>

	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td></td>
			<td>
				<%= link_to book_path(book.id) do %>
					<%= book.title %>
				<% end %>
			</td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>